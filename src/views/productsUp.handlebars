<div>
    <h2 class="formTitle">Ingrese nuevo producto</h2>
    <form class="form" action="/productos/cargarProductos" method="post" role="form" enctype="multipart/form-data">
        <div class="col-sm-8">
            <label class="form-label m-2" for="a">Nombre</label>
            <input id="a" class="form-control m-2 " type="text" name="name" placeholder="ingrese el nombre">
        </div>
        <div class="col-sm-8">
            <label class="form-label m-2"  for="b">Precio</label>
            <input id="b" class="form-control m-2 " type="number" name="price" placeholder="ingrese el precio">
        </div>
        <div class="col-sm-8">
            <label class="form-label m-2"  for="b">Plataforma</label>
            <input id="b" class="form-control m-2 " type="string" name="platform" placeholder="ingrese la p[lataforma]">
        </div>
        <div class="col-sm-8">
            <label class="form-label m-2"  for="b">Categoria</label>
            <input id="b" class="form-control m-2 " type="string" name="category" placeholder="ingrese el precio">
        </div>
        <div class="col-sm-8">
            <label class="form-label m-2"  for="c">descripcion del producto</label>
            <input id="c" class="form-control m-2 " type="text" name="description" placeholder="ingrese la descripcion">
        </div>
        <div class="col-sm-8">
            <label class="form-label m-2"  for="d">codigo</label>
            <input id="d" class="form-control m-2 " type="number" name="code" placeholder="ingrese el codigo">
        </div>
        <div class="mb-3">
            <label for="url" class="form-label">seleccionar imagen avatar</label>
            <input class="form-control" type="file" id="url" name="url">
        </div>
        <div class="col-sm-8">
            <label class="form-label m-2"  for="f">stock</label>
            <input id="f" class="form-control m-2 " type="number" name="stock" placeholder="ingrese el stock">
        </div>
        <div class="col-sm-8">
            <input class="btn btn-primary m-3" value="Cargar Producto" type="submit">
        </div>
    </form>

    <table class="table table-info table-striped ">
        <thead>
            <tr>
                <th scope="col"> ID </th>
                <th scope="col"> Nombre </th>
                <th scope="col"> Precio </th>
                <th scope="col"> Imagen </th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td>${{price}}</td>
                    <td>
                        <img src= "{{url}}" width="100px" alt= "{{name}}">
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

